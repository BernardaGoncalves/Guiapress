<%- include ('../../partials/header.ejs') %>
    <%- include ('../../partials/navbar.ejs') %>

        <div class="container">
            <hr>
            <div class="card">
                <div class = "card-header">
                    <h2>Novo Artigos</h2>
                </div>
                <div class="card-body">
                <form method="POST" action="/articles/save">
                    <input class="form-control" type="text" name="title" placeholder="Defina o titulo do Artigo"><br>
                    <textarea class="form-control" name="body" id="article" placeholder="Escreva o seu aartigo"></textarea><br>
                    <label>Categorias</label>
                    <select class="form-control" name="category">
                        <% categories.forEach((category) => { %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% }); %>
                    </select>
                    <br>
                    <button class="btn btn-success">Cadastrar</button>
                </form>
            </div>
            </div>
        </div>

